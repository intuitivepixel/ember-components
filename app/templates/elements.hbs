<div class="container">
  <p class="lead">
    <strong>Components</strong><br>
  </p>

  {{! masonry-grid model=model}}

  <div class="panel panel-default">
    <div class="panel-heading">Available Components</div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Title</th>
          <th>Excerpt</th>
        </tr>
      </thead>
      <tbody>
        {{#each element in model}}
        <tr>
          <td>{{element.id}}</td>
          <td>{{#link-to 'elements.element' element}}{{element.title}}{{/link-to}}</td>
          <td>{{element.description}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

{{outlet}}

</div>
